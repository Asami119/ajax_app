<h1>AjaxApp</h1>
<%= form_with url:  "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content  , id: "content" %>
  <%= form.submit '投稿する' , id: "submit" %>
<% end %>

<div id="list">
</div>

<table class='table striped table-hover'>
  <tbody>
    <% @posts.each do |post| %>
  <%# <div class="post"> %>
      <tr>
        <td>投稿日時：<%= post.created_at %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

